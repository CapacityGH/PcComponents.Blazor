@page "/"
@inject PcComponentsClient Client
@inject CategoriesClient Category

<PageTitle>My PC Components DB</PageTitle>

<div class="container py-3">
    <h1 class="text-center text-primary mb-4">My PC Components</h1>
    @if (components is null)
    {
        <div class="d-flex justify-content-center align-items-center py-5">
            <div class="spinner-border text-info me-2" role="status" aria-hidden="true"></div>
            <span class="text-muted">Fetching components...</span>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-3 g-md-4">
            @foreach (var component in components)
            {
                <div class="col">
                    <div class="card border-info shadow-sm h-100 rounded-3 card-hover d-flex flex-column">
                        <div class="card-header bg-light border-info d-flex align-items-center justify-content-between">
                            <div class="me-2">
                                <h5 class="card-title mb-0 text-info">@component.Name</h5>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                @if (!string.IsNullOrWhiteSpace(component.Category?.Name))
                                {
                                    <span class="badge bg-info text-dark">@component.Category?.Name</span>
                                }
                                <a class="btn btn-sm btn-outline-secondary" title="Edit" href="@($"/addEditComponent/{component.Id}")">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </div>
                        <div class="card-body text-center d-flex flex-column justify-content-center">
                            <p class="card-text fw-semibold mb-2">
                                <span class="text-success">💲</span> @component.Price.ToString("C")
                            </p>
                            <p class="card-text text-muted mb-0">
                                📅 Released:
                                @(component.ReleaseDate == default ? "N/A" : component.ReleaseDate.ToString("yyyy-MM-dd"))
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private PcComponent[]? components;

    protected override async Task OnInitializedAsync()
    {
        components = await Client.GetComponentsAsync();
    }
}